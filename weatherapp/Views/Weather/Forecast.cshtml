@{
    ViewBag.Title = "Weather";
    Layout = "~/Views/Shared/_Layout.cshtml";
} 
@model WeatherApp.Models.ForecastModel
<video autoplay loop id="video-background" muted plays-inline>
    <source src=@Model.forecastBackgroundVideo type="video/mp4">
</video>
<div class="row">
    <div class="col-sm-1" style="color:white; padding-top: 25px; padding-left: 28px">
        @Model.SunRise |
    </div>
    <div class="col-sm-1">
        <img src="~/Images/cartoon-sun-vector-art2.png" class="img-responsive">
    </div>
    <div class="col-sm-8" style="text-align: center; ">
        <div id="uppercase" style="color:white; padding-top:25px; font-size: large;">
            @Model.Location
        </div>
        
    </div>
    <div class="col-sm-1">
        <img src="~/Images/moon.png" class="img-responsive">
    </div>
    <div class="col-sm-1" style="color:white;  padding-top: 25px;">
        | @Model.SunSet
    </div>
</div>
<div class="row" style="padding-top:100px;">
    <div class="col-md-4" id="forecastBackground" style="color:white; ">
            <h4 style="text-align:center;">@Model.Time1Day</h4>
            @Model.Symbol1<br />
            Precipitation | @Model.Precipitation1<br />
            Wind Direction | @Model.WindDirection1<br />
            Wind speed | @Model.WindSpeed1<br />
            Temperature | @Model.Temperature1<br />
            Pressure | @Model.Pressure1<br />
            Humidity | @Model.Humidity1<br />
            Clouds | @Model.Cloud1
    </div>

    <div class="col-md-4" id="forecastBackground" style="color:white; text-align: center;">
            <h4 style="text-align:center;">@Model.Time2Day</h4>
            @Model.Symbol2<br />
            Precipitation | @Model.Precipitation2<br />
            Wind Direction | @Model.WindDirection2<br />
            Wind speed | @Model.WindSpeed2<br />
            Temperature | @Model.Temperature2<br />
            Pressure | @Model.Pressure2<br />
            Humidity | @Model.Humidity2<br />
            Clouds | @Model.Cloud2
    </div>

    <div class="col-md-4" id="forecastBackground" style="color:white; text-align:right;">
            <h4 style="text-align:center;">@Model.Time3Day</h4>
            @Model.Symbol3<br />
            Precipitation | @Model.Precipitation3<br />
            Wind Direction | @Model.WindDirection3<br />
            Wind speed | @Model.WindSpeed3<br />
            Temperature | @Model.Temperature3<br />
            Pressure | @Model.Pressure3<br />
            Humidity | @Model.Humidity3<br />
            Clouds | @Model.Cloud3
    </div>

</div>
<div class="row" style="padding-top: 100px; padding-left: 75px; text-align: center;">
    <div class="col-md-1">
            <img src=@Model.BackImg1 />
    </div>
    <div class="col-md-4">
    </div>
    <div class="col-md-1">
            <img src=@Model.BackImg2 />
    </div>
    <div class="col-md-4">
    </div>
    <div class="col-md-1">
            <img src=@Model.BackImg3 />
    </div>
</div>
<div class="row" style="padding-top:100px;">
    <div class="col-md-3">
    </div>
    <div class="col-sm-6" style=" text-align: center;">
        <a class="btn btn-social-icon btn-facebook" style="border-radius: 50%; ">
