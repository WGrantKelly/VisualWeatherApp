@{
    ViewBag.Title = "Weather";
}
<head>
    <link href="~/Content/StyleSheet1.css" rel="stylesheet" />
</head> 
<body>

    <div class="row" style="padding-top: 100px;">

    </div>
    <div class="row">
        <div class="text-center">
            <div class="col-sm-3">

            </div>
            <div class="col-sm-6">
                <img src="~/Images/title.png" />
            </div>
            <div class="col-sm-3">

            </div>
        </div>
    </div>
    <div class="row">
        <DIV class=" text-center" style="padding-top: 225px;">
            @model WeatherApp.Models.ForecastModel
            @using (Html.BeginForm("Forecast", "Weather", FormMethod.Post))
            {
                @Html.TextBoxFor(model => model.Location)
                @Html.ValidationMessageFor(model => model.Location)
                <button type="submit">Submit</button>
            }
        </DIV>
    </div>

    <div class="row" style="padding-top: 260px; padding-bottom:25px;">

        <div style="text-align: center;">
            <a class="btn btn-social-icon btn-facebook" style="border-radius: 50%;" onclick="location.href='https://www.facebook.com/'">
                <span class="fa fa-facebook"></span>
            </a>
            <a class="btn btn-social-icon btn-twitter" style="border-radius: 50%;" onclick="location.href='https://www.twitter.com/'">
                <span class="fa fa-twitter"></span>
            </a>
            <a class="btn btn-social-icon btn-instagram" style="border-radius: 50%;" onclick="location.href='https://www.instagram.com/'">
                <span class="fa fa-instagram"></span>
            </a>
            <a class="btn btn-social-icon btn-google" style="border-radius: 50%;" onclick="location.href='https://www.google.com/'">
                <span class="fa fa-google"></span>
            </a>
            <a class="btn btn-social-icon btn-bitbucket" style="border-radius: 50%;" onclick="location.href='https://www.bitbucket.com/'">
                <span class="fa fa-bitbucket"></span>
            </a>
            <a class="btn btn-social-icon btn-dropbox" style="border-radius: 50%;" onclick="location.href='https://www.dropbox.com/'">
                <span class="fa fa-dropbox"></span>
            </a>
            <a class="btn btn-social-icon btn-linkedin" style="border-radius: 50%;" onclick="location.href='https://www.linkedin.com/'">
                <span class="fa fa-linkedin"></span>
            </a>
            <a class="btn btn-social-icon btn-pinterest" style="border-radius: 50%;" onclick="location.href='https://www.pinterest.com/'">
                <span class="fa fa-pinterest"></span>
            </a>
            <a class="btn btn-social-icon btn-reddit" style="border-radius: 50%;" onclick="location.href='https://www.reddit.com/'">
                <span class="fa fa-reddit"></span>
            </a>
            <a class="btn btn-social-icon btn-soundcloud" style="border-radius: 50%;" onclick="location.href='https://www.soundcloud.com/'">
                <span class="fa fa-soundcloud"></span>
            </a>
        </div>

    </div>

</body>

